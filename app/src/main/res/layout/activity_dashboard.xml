        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="15dp">


        <TextView
            android:id="@+id/RemainingToSpend"
            android:layout_width="wrap_content"
